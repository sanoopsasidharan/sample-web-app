<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/add_book" >
                        <div class="mb-3">
                          <input type="text" class="form-control" id="exampleInputEmail1" name="Title" placeholder="Book Title" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" id="exampleInputEmail1" name="Author" placeholder="Author" aria-describedby="emailHelp">
                          </div>
                          <div class="mb-3">
                            <input type="text" class="form-control" id="exampleInputEmail1" name="Language" placeholder="Language" aria-describedby="emailHelp">
                          </div>
                          <div class="mb-3">
                            <input type="text" class="form-control" id="exampleInputEmail1" name="Description" placeholder="Description" aria-describedby="emailHelp">
                          </div>
                        
                       
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                </div>
            </div>
        </div>
    </div>
    <h1>Hello, world!</h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">+ Book</button>
    <% if(books){ %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Book Title</th>
                <th scope="col">Author Name</th>
                <th scope="col">Language</th>
                <th scope="col">Description</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i< books.length; i++) {%>
                    <tr>
                        <th scope="row"><%= [i+1] %></th>
                        <td><%= books[i].Title %></td>
                        <td><%= books[i].Author %></td>
                        <td><%= books[i].Language %></td>
                        <td><%= books[i].Description %></td>
                        <td>
                        
                            <form method="post" action="/editBook">
                                <input type="text"  name="id" value="<%= books[i]._id %>" id="">
                                <button type="submit">edit</button>
                            </form>
                            <button type="submit" onclick="edit('<%= books[i]._id %>')"  class="btn btn-secondary">Edit</button>
                        </td>
                        <td>
                            <a href="/aaa">aaa</a>
                        </td>
                        <td>
                            <button type="button"  class="btn btn-secondary">Delete</button>
                        </td>

                      </tr>
                    <% } %>
            </tbody>
          </table>
       
            <% } else{ %>  
                <h1>bar</h1>
     <% } %>


