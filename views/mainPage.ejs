    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->

    <script>
        document.getElementById('editForm').style.display='none'
        function edit(id){
          document.getElementById('bookId').value = id
            $.ajax({
                url:'/editBook',
                data:{id:id},
                method:'post',
                success:(response)=>{
                  console.log(response.bookDetails._id);
                    if(response.status){
                        document.getElementById('editForm').style.display='block'
                        document.getElementById('TitleName').value = response.bookDetails.Title
                        document.getElementById('AuthorName').value = response.bookDetails.Author
                        document.getElementById('Languages').value = response.bookDetails.Language
                        document.getElementById('Description').value = response.bookDetails.Description
                        
                        
                    }else{
                      alert('try pls')
                    }
                }
            })
        }
    </script>
</body>

</html>